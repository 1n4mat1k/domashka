#include <iostream>
using namespace std;

class queue
{ 
    private:
        int* arr;
        int head;
        int tail;
        int N;
        
    public:
        queue(int m)
        {
            head = 0;
            tail = 0;
            arr = new int[m];
            N = m;
        }
        
        ~ queue()
        {
            delete[] arr;
        }
        
        void add_item(int a)
        {
            if (head == (tail + 1) % N)
                cout << "Очередь переполнена!" << endl;
            else
            {
                arr[tail] = a;
                tail = (tail + 1) % N;
            }
        }
        
        void extract_item()
        {
            if (head != tail)
            {
                cout << arr[head];
                head = (head + 1) % N;
            }
            else
                cout << "Очередь пуста!";
        }
};

int main()
{
    int znach;
    int amount;
    bool r;
    
    cout << "Введите количество элементов в массиве: ";
    cin >> amount;
    queue element(amount);
    
    do{
        cout << "Введите 1 для добавления элемента\n"
             << "Введите 0 для извлечения элемента\n"
             << ":";
        cin >> r;
        
        if (r)
        {
            cout << "Введите значение: ";
            cin >> znach;
            element.add_item(znach);
        }
        else
        {
            cout << "Значение равно: ";
            element.extract_item();
            cout << endl;
        }
    } while (true);
    
    return 0;
}
