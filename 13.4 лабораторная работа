#include <stdio.h>
#include <math.h>
int main() {
    float n, a, b, i, c, d, e, f;
    printf("Введите значение числа A: ");
    scanf("%f", &a);
    printf("Введите значение числа N: ");
    scanf("%f", &n);
    
    
    for (i = 0; i < n - 1; i++){
        e += 1;
        b += pow(a, e);
    }
        
    f = b;
    d = b + 1;
    printf("Ответ: %f", d);
    
    return 0;
}
