#include <stdio.h>
#include <math.h>
int main() {
    float n, a, b, i, c, d, e = 3;
    printf("Введите значение числа A: ");
    scanf("%f", &a);
    printf("Введите значение числа N: ");
    scanf("%f", &n);
    
    for (i = 0; i < n; i++){
        e += 1;
        b += pow(a, e);
    }
    c = 1 + a + pow(a, 2) + pow(a, 3);
    d = c + b;
    printf("Ответ: %f", d);
    
    return 0;
}
