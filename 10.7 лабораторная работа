int main()
{
    float a, b, c;
    printf("Введите значение длины a: ");
    scanf("%f", &a);
    printf("Введите значение длины b: ");
    scanf("%f", &b);
    printf("Введите значение длины c: ");
    scanf("%f", &c);
    
    if (a + b > c & a + c > b & b + c > a){
        printf ("Существует треугольник со сторонами a, b, c");
    }
    else{
       printf ("Треугольника со сторонами a, b, c не существует"); 
    }

    return 0;
}
