#include <stdio.h>
#include <math.h>
int main() {
    float n , a, b, i, c, d, e, f;
    printf("Введите значение числа A: ");
    scanf("%f", &a);
    printf("Введите значение числа N: ");
    scanf("%f", &n);
    f = 1;
    for (i = 0; i < n - 1; i++){
        e += 1;
        f *= -1;
        b += f*pow(a, e);
    }

    d = 1 + b;
    printf("Ответ: %f", d);
    return 0;
}
