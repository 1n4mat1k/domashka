#include <stdio.h>
#include <math.h>
#include <stdlib.h>
int main()
{
    float x1, x2, y1, y2, x3, y3, a, b, c, p, P, S;
    printf("Введите координаты точки A: ");
    printf ("\nx1 = ");
    scanf ("%f", &x1);
    printf ("y1 = ");
    scanf ("%f", &y1);
    
    printf("\nВведите координаты точки B: ");
    printf ("\nx2 = ");
    scanf ("%f", &x2);
    printf ("y2 = ");
    scanf ("%f", &y2);
    
    printf("\nВведите координаты точки C: ");
    printf ("\nx3 = ");
    scanf ("%f", &x3);
    printf ("y3 = ");
    scanf ("%f", &y3);
    
    a = sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    b = sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
    c = sqrt((x1-x3)*(x1-x3)+(y1-y3)*(y1-y3));
    
    p = (a + b + c)/2;
    
    S = sqrt(p*(p-a)*(p-b)*(p-c));
    printf("\nПлощадь треугольника равна: %f\n", S);
    
    P = a + b + c;
    printf("Периметр треугольника равен: %f", P);
    
    return 0;
}
