#include <stdio.h>

int main()
{
    int a, b;
    printf("Введите количество байт: ");
    scanf("%d", &a);
    if (a % 1024 == 0){
        b = a / 1024;
        printf("Данный файл занимает %d килобайт", b);
    }
    else{
        b = a / 1024 + 1;
        printf("Данный файл занимает %d килобайт", b);
    }

    return 0;
}
