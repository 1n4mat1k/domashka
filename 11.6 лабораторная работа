#include <stdio.h>

int main()
{
    int a;
    printf("Введите значение переменной a: ");
    scanf("%d", &a);
    if (a >= 1 & a < 1000){
        if (a % 2 == 0){
            printf("чётное ");
        }
        if (a % 2 == 1){
            printf("нечётное ");
        }
        if (a / 100 >= 1){
            printf("трёхзначное ");
        }
        if (a / 100 < 1 & a / 10 >= 1){
            printf("двузначное ");
        }
        if (a / 10 < 1){
            printf("однозначное ");
        }
        printf ("число ");
    }
    else {
        printf("Введите другое число");
    }
