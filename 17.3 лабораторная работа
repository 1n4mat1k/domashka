#include <stdio.h>
int main()
{
    int a[1000], n, i, ;
    int min = a[2];
    printf("Введите количество N элементов: ");
    scanf("%i", &n);
    for (i = 0; i < n; ++i){
        printf("a[%i] : ", i);
        scanf("%d", &a[i]);
    }
    for (i = 2; i < n; i += 2) {
        if (a[i] < min){
            min = a[i];
        }
    }    
    printf("\nМинимальный элемент из элементов с чётными номерами: %d", min);
    return 0;
}
