#include <stdio.h>

int main()
{
    int a, x, y, b;
    printf("Введите координаты точки a:\n");
    printf("x = ");
    scanf("%d", &x);
    printf("y = ");
    scanf("%d", &y);
    
    if (x != 0 & y != 0){
        if (x > 0 & y > 0){
            printf("Данная точка лежит в 1 четверти");
        }
        if (x < 0 & y > 0){
            printf("Данная точка лежит в 2 четверти");
        }
        if (x < 0 & y < 0){
            printf("Данная точка лежит в 3 четверти");
        }
        if (x > 0 & y < 0){
            printf("Данная точка лежит в 4 четверти");
        }
    }
    else if (x == 0 || y == 0){
        printf("Задайте другую координату точки a");
    }

    return 0;
}
